@model WhatBug.WebUI.ViewComponents.MainNavigationComponentViewModel

@{   
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a asp-controller="Home" asp-action="Index" class="brand-link">
            <img src="~/lib/admin-lte/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">WhatBug</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/lib/admin-lte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Alexander Pierce</a>
                </div>
            </div>

            <!-- SidebarSearch Form -->
            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Url.GetRouteCategory() == RouteCategory.None)
            {
                @await Component.InvokeAsync("DefaultNavigation");
            }
            else if (Url.GetRouteCategory() == RouteCategory.Project && Url.TryGetRouteInt("projectId", out int projectId))
            {
                @await Component.InvokeAsync("ProjectNavigation", projectId);
            }

        </div>
        <!-- /.sidebar -->
    </aside>
}
