@model WhatBug.WebUI.ViewModels.Issues.CreateIssueViewModel

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/styles/default.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-select/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="~/lib/quill/quill.snow.css" />
}

@{
    ViewData["Title"] = "Create Issue";
}

@{
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h6 class="card-title">New Issue</h6>
                </div>
                <form asp-controller="Issues" asp-action="Create" method="post" class="quill-form">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Summary"></label>
                            <input asp-for="Summary" class="form-control" />
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                        <!-- Issue Type -->
                        <div class="form-group">
                            <label asp-for="SelectedIssueType"></label>
                            <select class="form-control selectpicker" asp-for="SelectedIssueType">
                                @for (int i = 0; i < Model.AllIssueTypes.Count; i++)
                                {
                                    var dataContent = "<i class='" + @Model.AllIssueTypes[i].ColorIcon.Icon.ClassName
                                                     + " wb-color-" + @Model.AllIssueTypes[i].ColorIcon.Color.LowerName + "'></i>"
                                                     + @Model.AllIssueTypes[i].Name;
                                    <option value="@Model.AllIssueTypes[i].Id" data-content="@dataContent"></option>
                                }
                            </select>
                        </div>
                        <!-- Issue Priority -->
                        <div class="form-group">
                            <label asp-for="SelectedPriorityId"></label>
                            <select class="form-control selectpicker" asp-for="SelectedPriorityId">
                                @for (int i = 0; i < Model.AllSchemePriorities.Count; i++)
                                {
                                    var dataContent = "<i class='" + @Model.AllSchemePriorities[i].ColorIcon.Icon.ClassName
                                                     + " wb-color-" + @Model.AllSchemePriorities[i].ColorIcon.Color.LowerName + "'></i>"
                                                     + @Model.AllSchemePriorities[i].Name;
                                    <option value="@Model.AllSchemePriorities[i].Id" data-content="@dataContent"></option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" name="Description" type="hidden" class="form-control quill-content" />
                            <div class="quill-editor"></div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary float-right">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/highlight.min.js"></script>
    <script type="text/javascript" src="~/lib/quill/quill.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="~/js/quill.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}