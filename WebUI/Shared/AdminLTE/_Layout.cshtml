<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>WhatBug</title>
    @await RenderSectionAsync("Styles", required: false)
    <partial name="AdminLTE/_Styles" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Top Nav Bar -->
        @await Component.InvokeAsync("TopNavigation")

        <!-- Main Sidebar Container -->
        <partial name="AdminLTE/_MainNavigation" />

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewBag.Title</h1>
                        </div>

                        @if (Context.Items.TryGetValue("Breadcrumbs", out var breadcrumbs))
                        {
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">

                                    @foreach (var breadcrumb in (List<Breadcrumb>)breadcrumbs)
                                    {
                                        if (breadcrumb.IsReadOnly)
                                        {
                                            <li class="breadcrumb-item active">
                                                <a>@breadcrumb.Display</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="breadcrumb-item">
                                                <a asp-controller="@breadcrumb.Controller"
                                                   asp-action="@breadcrumb.Action">@breadcrumb.Display</a>
                                            </li>
                                        }
                                    }
                                </ol>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <partial name="AdminLTE/_Footer" />
    </div>
    <partial name="AdminLTE/_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
