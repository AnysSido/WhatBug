@model WhatBug.WebUI.Components.TopNavigation.TopNavigationComponentViewModel

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-route="Home" class="nav-link">Home</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">
            <button id="createIssueModal" type="button" class="btn btn-primary">Create</button>
        </li>

    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">

        @if (Model.UserLoggedIn)
        {
        <li class="nav-item dropdown user-menu">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <avatar email="@Model.UserEmail" class="user-image img-circle elevation-2">
                    <span class="d-none d-md-inline">@Model.UserFullName</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <!-- User image -->
                <li class="user-header bg-primary">
                    <avatar email="@Model.UserEmail" class="img-circle elevation-2">

                        <p>
                            @($"{Model.UserFullName}")
                            <small>@Model.UserEmail</small>
                        </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                    <a asp-route="Profile" asp-route-userId="@Model.UserId"class="btn btn-default btn-flat">Profile</a>
                    <a asp-controller="Accounts" asp-action="Logout" class="btn btn-default btn-flat float-right">Sign out</a>
                </li>
            </ul>
        </li>
        }

        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
    </ul>
</nav>