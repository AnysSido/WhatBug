@model WhatBug.WebUI.Components.IssueDetail.IssueDetailViewModel

    <div class="createIssueModel">
        <div class="modal-dialog mw-100 w-75">
            <div class="modal-content">
                <div class="modal-body">

                    <div class="data">
                        <input type="hidden" asp-for="@Model.Id" class="issueId" />
                        <input type="hidden" asp-for="Description" class="issueDescription" />
                    </div>

                    <div class="row mb-1">
                        <div class="col">
                            <span><a asp-controller="Projects" asp-action="Index">@Model.ProjectName</a> / @Model.Id</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h4>@Model.Summary</h4>
                        </div>
                    </div>

                    <!-- Buttons Row -->
                    <div class="row mb-3">
                        <!-- Left side buttons -->
                        <div class="col-md-8">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default"><i class="fas fa-fw fa-edit mr-1"></i>Edit</button>
                                <button type="button" class="btn btn-default"><i class="far fa-fw fa-comment mr-1"></i>Comment</button>
                                <button type="button" class="btn btn-default"><i class="far fa-fw fa-user mr-1"></i>Assign</button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">ToDo</button>
                                <button type="button" class="btn btn-default">In Progress</button>
                                <button type="button" class="btn btn-default">Done</button>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">Admin</button>
                            </div>
                        </div>

                        <!-- Right side buttons -->
                        <div class="col-md-6">

                        </div>
                    </div>

                    <div class="row">
                        <!-- Details -->
                        <div class="col-md-8">
                            <div class="row w-50">
                                <div class="col">
                                    <p>Issue Type</p>
                                </div>
                                <div class="col">
                                    <p class="col-form-label mb-0"><icon icon="@Model.IssueTypeIconName" color="@Model.IssueTypeIconColor" /> @Model.IssueTypeName</p>
                                </div>
                            </div>
                            <div class="row w-50">
                                <div class="col">
                                    <p>Priority</p>
                                </div>
                                <div class="col">
                                    <p class="col-form-label"><icon icon="@Model.PriorityIconName" color="@Model.PriorityIconColor" /> @Model.PriorityName</p>
                                </div>
                            </div>
                            <!-- Quill Editor -->
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <div class="quill-editor"></div>
                            </div>
                        </div>

                        <!-- People -->
                        <div class="col-md-4">
                            <h6 class="card-title"><b>People</b></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
