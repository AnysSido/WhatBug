@model WhatBug.Application.Admin.Commands.CreateRole.CreateRoleCommand

@{
    ViewData["Title"] = "Create Project Role";
}

@{
    <div class="simple-page">
        <div>
            <div>
                Create a new project role to be used with projects in WhatBug.
            </div>
            <div>
                Project roles are used in conjunction with users and permission schemes.
                Each permission scheme can have different permissions for each role.
            </div>
            <div>
                Users can be assigned a role within a project. Users will be granted permissions
                based what is available for their role within the current permission scheme.
            </div>
        </div>

        <form method="post" class="width-m">
            <div class="form-group">
                <label asp-for="Name">Role Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary float-right">Create Role</button>
        </form>

        <div class="alert alert-info alert-dismissible width-m">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-info"></i> Example</h5>
            <div>1. Create permission scheme <b>"Software Development".</b></div>
            <div>2. Create project role <b>"Developer".</b></div>
            <div>3. Grant the <b>"Developer"</b> role a permission under the <b>"Software Development"</b> scheme.</div>
            <div>4. Assign the new permission scheme to a project.</div>
            <div>5. Assign a user to the <b>Developer</b> role for that project.</div>
            <div>6. The user now has the project permissions you granted to the <b>Developer</b> role.</div>
        </div>
    </div>
}
