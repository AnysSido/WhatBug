@model WhatBug.Application.UserPermissions.Queries.GetGrantUserPermissions.GetGrantUserPermissionsQueryResult

@{
    <form method="post" asp-route="GrantUserPermissions">
        <input asp-for="@Model.Id" />
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modify Global Permissions</h5>
                    <br />
                    <p>Username: @Model.Username</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Granted</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Permissions.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.Permissions[i].Id" type="hidden" />
                                        <input asp-for="@Model.Permissions[i].IsGranted" />
                                    </td>
                                    <td>@Model.Permissions[i].Name</td>
                                    <td>@Model.Permissions[i].Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
}