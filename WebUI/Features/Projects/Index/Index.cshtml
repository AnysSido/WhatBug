@model WhatBug.Application.Projects.Queries.GetProjects.GetProjectsQueryResult

@{
    ViewData["Title"] = "My Projects";
}

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Key
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created By
                    </th>
                    <th>
                        Progress
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in @Model.Projects)
                {
                    <tr>
                        <td>
                            <a asp-route="Dashboard" asp-route-projectId="@project.Id">@project.Name</a>
                            <br />
                            <small>
                                Created @project.Created.ToString("dd-MM-yyyy")
                            </small>
                        </td>
                        <td>
                            @project.Key
                        </td>
                        <td>
                            <p>@project.Description</p>
                        </td>
                        <td>
                            <avatar email="@project.CreatorEmail" class="img-circle img-bordered-sm" style="height: 40px; width: 40px;">
                            <a asp-route="Profile" asp-route-userId="@project.CreatorId" asp class="user-list-name">@project.CreatorName</a>
                        </td>
                        <td class="project_progress">
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-success progress-bar-striped" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: 57%">
                                </div>
                            </div>
                            <small>
                                @project.ProgressPercent% Complete
                            </small>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="#">
                                <i class="fas fa-folder">
                                </i>
                                View
                            </a>
                            <a class="btn btn-info btn-sm" href="#">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>