@model WhatBug.WebUI.Features.Accounts.Register.RegisterViewModel

@{
    Layout = "AdminLTE/_LayoutBasic";
    ViewData["Title"] = "Register";
}

<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1"><b>What</b>Bug</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Register a new account</p>

                <form asp-controller="accounts" asp-action="register" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    @*<span asp-validation-for="Username" class="text-danger"></span>*@
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="AgreeToTerms">
                                <label asp-for="AgreeToTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                            @*<span asp-validation-for="AgreeToTerms" class="text-danger"></span>*@
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </div>
                </form>

                <a asp-action="Login" class="text-center">Already have an account?</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- jQuery -->
    <script src="~/lib/jQuery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>
</body>