<div class="card">
    <div class="card-body table-responsive p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="min-width: 140px;">Name</th>
                    <th>Key</th>
                    <th style="min-width: 140px;">Description</th>
                    <th style="min-width: 150px;">Created By</th>
                    <th style="min-width: 140px;">Progress</th>
                    <th style="min-width: 280px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in @Model.Projects)
                {
                    <tr>
                        <td>
                            <a asp-route="Dashboard" asp-route-projectId="@project.Id">@project.Name</a>
                            <br />
                            <small>
                                Created @project.Created.ToString("dd-MM-yyyy")
                            </small>
                        </td>
                        <td>
                            @project.Key
                        </td>
                        <td>
                            <p>@project.Description</p>
                        </td>
                        <td>
                            <avatar email="@project.CreatorEmail" class="img-circle img-bordered-sm" style="height: 40px; width: 40px;">
                            <a asp-route="Profile" asp-route-userId="@project.CreatorId" asp class="user-list-name">@project.CreatorName</a>
                        </td>
                        <td class="project_progress">
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-success progress-bar-striped" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: 57%">
                                </div>
                            </div>
                            <small>
                                @project.ProgressPercent% Complete
                            </small>
                        </td>
                        <td class="project-actions" style="width: 280px;">
                            <a asp-route="Dashboard" asp-route-projectId="@project.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-tachometer-alt">
                                </i>
                                Dashboard
                            </a>
                            <a asp-route="KanbanBoard" asp-route-projectId="@project.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-columns -alt">
                                </i>
                                Kanban Board
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>