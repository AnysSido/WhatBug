@model WhatBug.Application.PermissionSchemes.Queries.GetEditPermissionScheme.GetEditPermissionSchemeQueryResult

@{
    ViewData["Title"] = "Edit Permission Scheme";
}

@{
    <div class="page-container px-sm-3">
        <div class="text-block">
            <p>
                Permission schemes allow you to have different sets of role permissions on different projects.
                Each <a asp-route="ProjectRoles">project role</a> can be assigned certain permissions within a permission scheme.
            </p>
            <p>
                A project can then be assigned a permission scheme and will inherit all of the permissions from that scheme.
            </p>
        </div>

        <div class="page-container__item--medium-width">
            <form class="form" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="form__group">
                    <label class="form__label" asp-for="Name">Role Name</label>
                    <input class="form__input" asp-for="Name" />
                    <span class="form__validation" asp-validation-for="Name"></span>
                </div>
                <div class="form__group">
                    <label class="form__label" asp-for="Description"></label>
                    <input class="form__input" asp-for="Description" />
                    <span class="form__validation" asp-validation-for="Description"></span>
                </div>
                <button class="button button--primary float-right" type="submit">
                    <i class="button__icon icon icon--save"></i>
                    Update
                </button>
            </form>
        </div>
    </div>
}