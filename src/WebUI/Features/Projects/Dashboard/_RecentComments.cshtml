<div class="card">
    <div class="card-header">
        <h3 class="card-title">Recent Comments</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">

        @foreach (var comment in @Model.RecentComments)
        {
            <div class="post">
                <div class="user-block">
                    <avatar class="img-circle img-bordered-sm" email="@comment.Email" />
                    <span class="username">
                        <a asp-route="Profile" asp-route-userId="@comment.AuthorId">@comment.Author</a>
                    </span>
                    <span class="description">Commented in issue <b><a asp-route="KanbanBoard" asp-route-projectId="@Model.ProjectId" asp-route-issue="@comment.IssueId">@comment.IssueId</a></b></span>
                </div>
                <p>
                    @comment.Content
                </p>
            </div>
        }
    </div>
</div>