<div class="card">
    <div class="card-header">
        <h3 class="card-title">Recent Issues</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Summary</th>
                    <th>Assignee</th>
                    <th>Priority</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model.RecentIssues)
                {
                    <tr>
                        <td style="white-space: nowrap;">
                            <a asp-route="KanbanBoard" asp-route-projectId="@Model.ProjectId" asp-route-issue="@issue.Id">@issue.Id</a>
                        </td>
                        <td>
                            @issue.Summary
                        </td>
                        <td>
                            <avatar email="@issue.AssigneeEmail" class="img-circle img-bordered-sm" style="height: 40px; width: 40px;">
                            <a asp-route="Profile" asp-route-userId="@issue.AssigneeId" asp class="user-list-name">@issue.AssigneeFullName</a>
                        </td>
                        <td style="white-space: nowrap;">
                            <span>
                                <i class="wb-color-@issue.IconColor.ToLowerInvariant() icon icon--@issue.Icon"></i>
                                <label for="priority_Name">@issue.Priority</label>
                            </span>
                        </td>
                        <td style="white-space: nowrap;">
                            @issue.Status
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>